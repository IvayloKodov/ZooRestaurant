@model ZooRestaurant.Web.Models.ViewModels.Messages.MessageViewModel
@{
    ViewBag.Title = "Контакти";
}

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <h3>Контакти</h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="well well-sm">
                @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <fieldset>
                        <legend class="text-center header">Свържете се с нас</legend>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Име" } })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Фамилия" } })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Поща" } })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-question fa" aria-hidden="true"></i></span>
                                    @Html.EnumDropDownListFor(m => m.Subject, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-commenting fa" aria-hidden="true"></i></span>
                                    <textarea class="form-control" id="content" name="content" placeholder="Напишете съобщение." rows="11" style="resize: none"></textarea>
                                    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <input type="submit" class="btn btn-primary" value="Изпрати" />
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <div class="panel panel-default">
                    <div class="text-center header">Нашият офис</div>
                    <div class="panel-body text-center">
                        <h4>Адрес</h4>
                        <div>
                            гр. София<br />
                            ул. Граф Игнатиев 18<br />
                            Телефон: 0898 99 88 77<br />
                            service@zoorestaurant.bg<br />
                        </div>
                        <hr />
                        <div class="well">
                            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=sofia&amp;aq=&amp;sll=37.6,-95.665&amp;sspn=60.867771,135.263672&amp;t=m&amp;ie=UTF8&amp;hq=&amp;hnear=New+York&amp;z=11&amp;iwloc=A&amp;output=embed"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}