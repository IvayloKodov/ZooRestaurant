@model ZooRestaurant.Web.Models.ViewModels.Profile.ProfileViewModel

<div class="container">
    <div class="row">
        <div class="col-md-11" style="float: left;">
            <h3>
                Здравей, @Model.FirstName @Model.LastName! Адресът, който сте посочили, ще бъде използван
                за доставка при Вашите поръчки. Ако желаета да го промените, посетете секция "Промени" !
            </h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.FirstName) :</td>
                            <td> @Html.DisplayFor(m => m.FirstName)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.LastName) :</td>
                            <td> @Html.DisplayFor(m => m.LastName)</td>
                        </tr>
                        <tr>
                            <td> Държава :</td>
                            <td> България</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <div class="table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Address) :</td>
                            <td> @Html.DisplayFor(m => m.Address)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Email) :</td>
                            <td> @Html.DisplayFor(m => m.Email)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.PhoneNumber) :</td>
                            <td> @Html.DisplayFor(m => m.PhoneNumber)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>